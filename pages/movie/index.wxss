.items {

}

.items .item {
    padding: 24rpx 0 24rpx 24rpx;
}

.items image {
    width: 128rpx;
    height: 180rpx;

    float: left;
}

.items .info {
    height: 208rpx;
    padding-left: 152rpx;
    border-bottom: 1rpx solid #dcdcdc;
}

.items .meta text {
